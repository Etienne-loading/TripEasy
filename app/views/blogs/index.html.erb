<div class="container my-5">
  <h1>Blogs</h1>
  <p>Find me in app/views/blogs/index.html.erb</p>
  <div class="row">
    <div class="col">
      <%= link_to "view all blogs", blogs_path, class: "btn btn-primary" %>
      <%= form_with url: blogs_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Nevada, Road-trip, hiking, etc..."
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <p><%= link_to "New blog", new_blog_path if policy(Blog).new? %></p>
</div>
