<body class="bg-white text-dark">
  <div class="container my-5">
    <h1>Blogs</h1>
    <p>Find me in app/views/blogs/index.html.erb</p>
    <div class="row">
      <div class="col">
        <%= link_to "view all blogs", blogs_path, class: "btn btn-primary" %>
        <%= form_with url: blogs_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Nevada, Road-trip, hiking, etc..."
          %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p><%= link_to "New blog", new_blog_path if policy(Blog).new? %></p>
      </div>
    </div>
      <div class="card-container">
        <% @blogs.each do |blog| %>
        <div class="card-blog p-3">
          <div class="card-img" style="background-image: url(<%= cl_image_path blog.photo_banner.key %>)"></div>
          <div class="d-flex flex-column">
            <div>
            <div class="mt-3"><h6><%= blog.title %></h6></div>
              <% if blog.start_date - blog.end_date > 30 %>
              <h6>€<%=(((blog.max_price + blog.min_price)/2)*4)/((blog.end_date - blog.start_date).to_i)/30 %><span class="per-period">/month</span></h6>
              <%else%>
              <h6>€<%=((blog.max_price + blog.min_price)/2)/((blog.end_date - blog.start_date).to_i) %><span class="per-period">/week</span></h6>
              <%end%>
              <p class="card-intro"><%=blog.intro.truncate_words(20) %></p>
            </div>
            <div class="mt-auto">
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</body>
