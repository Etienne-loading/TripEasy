<%= simple_form_for [@blog, @step],
  html: { class:"d-none", data: { layout_target:"form3" }} do |f| %>
  <%= f.input :title, label: false, placeholder: "Title" %>
  <%= f.input :address, label: false, placeholder: "Address" %>
  <%= f.input :duration, label: false, placeholder: "Duration" %>
  <%= f.input :photo, label: false, as: :file %>
  <%= f.hidden_field :layout, value: 3 %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
