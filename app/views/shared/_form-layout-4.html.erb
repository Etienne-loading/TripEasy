<%= simple_form_for [@blog, @step], url: blog_steps_path(@blog),
  html: { class:"d-none", data: { layout_target:"form4" }} do |f| %>
<%= f.input :title, label: false, placeholder: "Title" %>
<%= f.input :address, label: false, placeholder: "Address" %>
<%= f.input :content, label: false,  input_html: { rows:"9" }, placeholder: "Content" %>
<%= f.input :duration, label: false, placeholder: "Duration" %>
<%= f.input :tag_list, label: false, placeholder: "Tag" %>
<%= f.hidden_field :layout, value: 4 %>
<%= f.submit class: "btn btn-primary" %>
<% end %>
